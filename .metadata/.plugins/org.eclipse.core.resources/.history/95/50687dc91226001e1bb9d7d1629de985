	<%
	double tongTien = 0;
	// Radio button => name
	String processor = request.getParameter("processor");
	if(processor != null ){
		if(processor.equals("Core I9")){
			tongTien += 5000000;
		}else if(processor.equals("Core I7")){
			tongTien += 4000000;
		}else if(processor.equals("Core I5")){
			tongTien += 3000000;
		}
	}
	%>
